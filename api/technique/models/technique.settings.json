{
  "kind": "collectionType",
  "collectionName": "methods",
  "info": {
    "name": "methods",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "intro": {
      "type": "text",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "slug": {
      "type": "string"
    },
    "minimum_time": {
      "type": "decimal",
      "max": 99,
      "min": 0
    },
    "maximum_time": {
      "type": "decimal",
      "min": 0,
      "max": 99
    },
    "difficulty": {
      "type": "enumeration",
      "enum": [
        "Easy",
        "Moderate",
        "Hard"
      ],
      "required": false
    },
    "methods": {
      "collection": "technique"
    },
    "phase": {
      "type": "enumeration",
      "enum": [
        "Insight",
        "Analysis",
        "Prototype",
        "Evaluation"
      ],
      "required": true
    },
    "stats": {
      "type": "component",
      "repeatable": false,
      "component": "method.stats"
    },
    "dynamic_zone": {
      "type": "dynamiczone",
      "components": [
        "common.image",
        "common.rich",
        "common.slides",
        "common.text",
        "common.video",
        "common.sub-section"
      ]
    },
    "materials": {
      "collection": "materials"
    },
    "cover": {
      "type": "component",
      "repeatable": false,
      "component": "common.cover-photo",
      "required": true
    }
  }
}
